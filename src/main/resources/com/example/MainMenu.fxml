<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MainMenuController">
   <children>
      <ImageView fitHeight="100.0" fitWidth="200.0">
         <image>
            <Image url="@logo.jpeg" />
         </image>
      </ImageView>
      <Button fx:id="startButton" onAction="#startGame1" text="Start Map 1" />
      <Button mnemonicParsing="false" onAction="#startGame2" text="Start Map 2" />
      <Button mnemonicParsing="false" onAction="#startGame3" text="Start Map 3" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
